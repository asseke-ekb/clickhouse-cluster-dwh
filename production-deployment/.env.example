# ==================== IP Адреса VM ====================
# Заменить на реальные IP адреса ваших виртуальных машин

# ClickHouse Nodes
VM_1_IP=192.168.1.101
VM_2_IP=192.168.1.102
VM_3_IP=192.168.1.103

# ZooKeeper Nodes
VM_4_IP=192.168.1.104
VM_5_IP=192.168.1.105
VM_6_IP=192.168.1.106

# Infrastructure (HAProxy + Monitoring)
VM_7_IP=192.168.1.107

# ==================== Пароли ====================
# ВАЖНО: Замените все пароли перед развертыванием!

# ClickHouse Admin
CLICKHOUSE_ADMIN_PASSWORD=your_strong_admin_password_here

# Grafana
GRAFANA_ADMIN_PASSWORD=your_grafana_password_here

# ==================== Настройки ресурсов ====================

# ClickHouse - размер кэшей (в байтах)
# Node-01 (Write)
CH01_MARK_CACHE_SIZE=5368709120
CH01_UNCOMPRESSED_CACHE_SIZE=10737418240

# Node-02/03 (Read)
CH02_MARK_CACHE_SIZE=10737418240
CH02_UNCOMPRESSED_CACHE_SIZE=21474836480

# ==================== Retention ====================
PROMETHEUS_RETENTION=30d
CLICKHOUSE_QUERY_LOG_TTL=30
